<div class="container mx-auto py-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-2xl font-bold mb-4"><%= @album.title %></h1>

  <!-- Grid de Fotos -->
  <div class="grid grid-cols-3 gap-4 mb-6">
    <% @photos.each do |photo| %>
      <div class="relative">
        <%= image_tag url_for(photo.image.variant(resize_to_fill: [300, 300])) if photo.image.attached? %>
        <p class="text-center mt-2"><%= photo.caption %></p>
      </div>
    <% end %>
  </div>

  <!-- FormulÃ¡rio de Envio -->
  <h2 class="text-xl font-semibold mb-2">Add a new photo</h2>
  <%= form_with(model: @photo, url: dashboard_album_photos_path(@album), local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :image, "Choose a photo" %>
      <%= form.file_field :image, class: "block w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :caption, "Caption (optional)" %>
      <%= form.text_field :caption, class: "block w-full" %>
    </div>

    <%= form.submit "Upload", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Edit this album", edit_album_path(@album), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to albums", albums_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>

  <div class="inline-block ml-2">
    <%= button_to "Destroy this album", @album, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>

